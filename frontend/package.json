{
  "name": "abrechnung-frontend",
  "version": "1.4.3",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite & vue-tsc --noEmit --watch",
    "build": "vue-tsc --noEmit && vite build && cp src/manifest.json dist/manifest.json && cp -R src/icons dist/icons",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore --fix src",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|vue)\" --locales \"./src/locales/**/*.json\""
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@vueform/vueform": "^1.11.0",
    "axios": "^1.7.8",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "json-editor-vue": "^0.17.3",
    "qrcode": "^1.5.4",
    "qs": "^6.13.1",
    "vue": "^3.5.12",
    "vue-i18n": "^9.14.2",
    "vue-router": "^4.5.0",
    "vue-select": "^4.0.0-beta.6",
    "vue3-easy-data-table": "^1.5.47"
  },
  "devDependencies": {
    "@intlify/vue-i18n-loader": "^4.2.0",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^22.10.1",
    "@types/qrcode": "^1.5.5",
    "@types/qs": "^6.9.17",
    "@types/vue-select": "^3.16.8",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^9.16.0",
    "eslint-plugin-vue": "^9.32.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vue-tsc": "^2.1.10",
    "vite-plugin-pwa": "^0.20.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "plugin:vue/vue3-essential"
    ],
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}