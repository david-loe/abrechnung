{
  "include": ["**/*", "../common/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "module": "NodeNext",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "./src/*" // set path `@/*` as alias of `src/*`
      ]
    }
  }
}
