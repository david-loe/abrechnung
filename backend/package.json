    "@types/passport-http-bearer": "^1.0.41",
    "@types/passport-microsoft": "^1.0.3",
    "@types/semver": "^7.7.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/web-push": "^3.6.4",
    "ava": "^6.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "nodemon --ext ts,js,json,ejs,tsv --watch './**/*' --watch '../common/**/*' --ignore './dist/**/*' --exec 'yarn run tsoa spec-and-routes &&  npx tsc && node dist/app/server.js'",
    "debug": "nodemon --ext ts,js,json,ejs,tsv --watch './**/*' --watch '../common/**/*' --ignore './dist/**/*' --exec 'yarn run tsoa spec-and-routes &&  npx tsc && node --inspect=0.0.0.0:$BACKEND_DEBUG_PORT dist/app/server.js'",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/build/server.js",
    "test": "npm run build && npm run _test:$NODE_ENV",
    "_test:production": "ava --serial --timeout=1m dist/build/tests/**/* ",
    "_test:development": "ava --serial --timeout=1m dist/app/tests/**/* ",
    "test:debug": "ava debug --host 0.0.0.0 --port $BACKEND_DEBUG_PORT --serial dist/app/tests/api/travel.js",
    "setup": "npm run build && npm run _setup:$NODE_ENV",
    "_setup:production": "node dist/build/setup.js",
    "_setup:development": "node dist/app/setup.js"
  }
}
